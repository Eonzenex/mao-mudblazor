@page "/data"
@inherits DataBase

<MudCard>
    <MudCardContent>
        <MudText Typo="Typo.h1">Data</MudText>
        <MudDivider Class="my-4"/>
        
        @foreach(var (key, value) in GroupDictionary)
        {
            <MudText Typo="Typo.h3">@key</MudText>
            <MudText Typo="Typo.h4">@value</MudText>
        }
        
        <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center;">
            <MudButton 
                Variant="Variant.Outlined" 
                OnClick="NotifyStateChanged" 
                Class="py-2 px-16"
            >Refresh data</MudButton>
        </div>
    </MudCardContent>
</MudCard>
